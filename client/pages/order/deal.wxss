/* pages/order/deal.wxss */
page{
  background-color: #f0f0f0;
}

.location{
  background-color: #fff;
  padding: 40rpx 10rpx 30rpx 30rpx;
}
.location:not(:last-child){
   border-bottom: 1rpx solid #ddd; 
}
.info{
  width: 83%;
  display: inline-block;
  vertical-align: middle;
}
.info-address{
  display: block;
}
.info-consumer{
  margin-top: 5rpx;
  color: #555;
  font-size: 30rpx;
  display: block;
}
.modify{
  width: 15%;
  display: inline-block;
  vertical-align: middle;
  text-align: right;
}
.modify image{
  width: 64rpx;
  height: 64rpx;
}
.order-group{
  padding-bottom: 120rpx;
  background-color: #fff;
}
.deliver{
  padding: 20rpx 20rpx;
}
.deliver .price{
  margin-left: 20rpx;
}
.remark{
  padding: 20rpx 20rpx;
}
.remark textarea{
  padding: 20rpx 0;
  text-indent: 20rpx;
  width: 100%;
  height: 200rpx;
  display: block;
  border: 1rpx solid #ddd;
}
.order{
  padding: 20rpx 20rpx;
  margin-top: 20rpx;
}
.order:not(:last-child){
  border-bottom: 2rpx solid #f0f0f0;
}
.order .shop{
  display: block;
}
.order .goods-group{
  background-color: #f0f0f0;
  margin: 20rpx 0;
  padding: 20rpx 0;
}
.goods-group .goods{
  padding: 10rpx 20rpx;
}
.goods-group .goods:not(:last-child){
  border-bottom: 1rpx solid #fff;
}
.goods .left,
.goods .right{
  display: inline-block;
  vertical-align: middle;
}
.goods .left{
  width: 25%;
}
.goods .right{
  width: 75%;
}
.goods image{
  width: 160rpx;
  height: 160rpx;
  display: inline-block;
  vertical-align: middle;
}
.goods .goods-name{
  margin: 10rpx 0 20rpx 20rpx;
  display: inline-block;
  vertical-align: middle;
}
.goods .batch-group{
  text-align: right;
  padding-right: 40rpx;
}

.option{
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: #fff;
}
.option view{
  padding: 30rpx 0;
  display: inline-block;
  vertical-align: middle;
}
.option .total{
  width: 60%;
}
.option .deal{
  width: 40%;
  background-color: #FF8C00;
  text-align: center;
}
.option .deal text{
  color: #fff;
  text-align: center;
}
.total-count{
  margin-left: 30rpx;
}
.total-price{
  margin-left: 15rpx;
}