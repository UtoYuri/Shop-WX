/* pages/address/address.wxss */

page {
  background-color: #f8f8f8;
}

.address-list {
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  background-color: #fff;
}

.address-title {
  display: flex;
  justify-content: space-between;
}

.address-title text {
  padding: 15rpx 0;
  font-size: 32rpx;
}

.add-detail {
  margin-top: 10rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
}

.add-default {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}

.add-left-cont {
  display: flex;
  align-items: center;
}

.add-left-cont image {
  width: 36rpx;
  height: 36rpx;
}

.add-left-cont text {
  margin-left: 15rpx;
}

.add-right-cont {
  display: flex;
  color: #666;
  font-size: 28rpx;
}

.default-color {
  color: #f4de3c;
}

.add-address {
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #FF8C00;
  color: #fff;
  font-size: 35rpx;
}
